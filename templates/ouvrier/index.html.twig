{% extends 'base.html.twig' %}

{% block title %}Gestion des Ouvriers{% endblock %}

{% block body %}
<div class="page-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <a href="{{ path('app_home') }}">
            <span>üè†</span>
            Accueil
        </a>
        <span class="breadcrumb-separator">‚Ä∫</span>
        <span>üë∑ Ouvriers</span>
    </nav>

    <div class="page-header">
        <div>
            <h1 class="page-title">üë∑ Gestion des Ouvriers</h1>
            <p class="page-subtitle">G√©rez votre √©quipe d'ouvriers</p>
        </div>
        <div class="header-buttons">
            <a href="{{ path('app_ouvrier_new') }}" class="btn-create">
                <span>‚ûï</span>
                Cr√©er un Ouvrier
            </a>
            <a href="{{ path('app_home') }}" class="btn-secondary">
                <span>‚Üê</span>
                Retour √† l'accueil
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-container">
        <div class="stat-card">
            <span class="stat-icon">üë∑</span>
            <div class="stat-value">{{ ouvriers|length }}</div>
            <div class="stat-label">Total des Ouvriers</div>
        </div>
        
        <div class="stat-card">
            <span class="stat-icon">üí∞</span>
            <div class="stat-value">
                {% set totalSalaire = 0 %}
                {% for ouvrier in ouvriers %}
                    {% set totalSalaire = totalSalaire + ouvrier.salaire %}
                {% endfor %}
                {{ totalSalaire|number_format(0, ',', ' ') }} Dt
            </div>
            <div class="stat-label">Masse Salariale</div>
        </div>
        
        <div class="stat-card">
            <span class="stat-icon">üìä</span>
            <div class="stat-value">
                {% set uniqueGrades = [] %}
                {% for ouvrier in ouvriers %}
                    {% if ouvrier.grades not in uniqueGrades %}
                        {% set uniqueGrades = uniqueGrades|merge([ouvrier.grades]) %}
                    {% endif %}
                {% endfor %}
                {{ uniqueGrades|length }}
            </div>
            <div class="stat-label">Grades Diff√©rents</div>
        </div>
        
        <div class="stat-card">
            <span class="stat-icon">‚≠ê</span>
            <div class="stat-value">
                {% if ouvriers|length > 0 %}
                    {{ (totalSalaire / ouvriers|length)|number_format(2, ',', ' ') }} Dt
                {% else %}
                    0,00 Dt
                {% endif %}
            </div>
            <div class="stat-label">Salaire Moyen</div>
        </div>
    </div>

    <!-- Ouvriers Table -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table" id="ouvriersTable">
                <thead>
                    <tr>
                        
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Salaire</th>
                        <th>Date de Naissance</th>
                        <th>Grade</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ouvrier in ouvriers %}
                    <tr>
                       
                        <td data-label="Nom">
                            <span class="name-badge">
                                <span>üë§</span>
                                {{ ouvrier.nom }}
                            </span>
                        </td>
                        <td data-label="Pr√©nom">
                            <span class="name-badge">
                                <span>üë§</span>
                                {{ ouvrier.prenom }}
                            </span>
                        </td>
                        <td data-label="Salaire">
                            <span class="salary-badge">
                                <span>üí∞</span>
                                {{ ouvrier.salaire|number_format(2, ',', ' ') }} Dt
                            </span>
                        </td>
                        <td data-label="Date de Naissance">
                            {% if ouvrier.daten %}
                                <span class="date-text">{{ ouvrier.daten|date('d/m/Y') }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td data-label="Grade">
                            <span class="grade-badge">
                                <span>üìä</span>
                                {{ ouvrier.grades }}
                            </span>
                        </td>
                        <td data-label="Actions">
                            <div class="action-buttons">
                                <a href="{{ path('app_ouvrier_show', {'id': ouvrier.id}) }}" class="btn-action btn-show" title="Voir les d√©tails">
                                    <span>üëÅÔ∏è</span>
                                    Voir
                                </a>
                                <a href="{{ path('app_ouvrier_edit', {'id': ouvrier.id}) }}" class="btn-action btn-edit" title="Modifier l'ouvrier">
                                    <span>‚úèÔ∏è</span>
                                    Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <div class="empty-state-icon">üë∑</div>
                                <div class="empty-state-text">Aucun ouvrier trouv√©</div>
                                <div class="empty-state-subtext">Commencez par cr√©er votre premier ouvrier</div>
                                <a href="{{ path('app_ouvrier_new') }}" class="empty-state-action">
                                    <span>‚ûï</span>
                                    Cr√©er mon premier ouvrier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Export Section -->
    {% if ouvriers|length > 0 %}
    <div style="text-align: center; margin-top: 2rem;">
        <div style="color: var(--text-secondary); font-size: 0.875rem;">
            Affichage de <strong>{{ ouvriers|length }}</strong> ouvrier{{ ouvriers|length > 1 ? 's' : '' }} au total
        </div>
    </div>
    {% endif %}
</div>

<style>
