}

/* Text styles */
.date-text {
    font-family: 'Courier New', monospace;
    font-weight: 600;
    color: var(--text-primary);
}

.text-muted {
    color: var(--text-muted);
    font-style: italic;
}

/* Action Buttons */
.action-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.btn-action {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    border: 1px solid;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
