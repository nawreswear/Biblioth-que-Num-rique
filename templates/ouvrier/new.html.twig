<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.ouvrier-create-form');
    const nomInput = document.querySelector('#{{ form.nom.vars.id }}');
    const prenomInput = document.querySelector('#{{ form.prenom.vars.id }}');
    const salaireInput = document.querySelector('#{{ form.salaire.vars.id }}');
    const gradeInput = document.querySelector('#{{ form.grades.vars.id }}');
    const previewSection = document.getElementById('previewSection');
    const previewAvatar = document.getElementById('previewAvatar');
    const previewName = document.getElementById('previewName');
    const previewSalary = document.getElementById('previewSalary');
    const previewGrade = document.getElementById('previewGrade');
    const submitButton = document.getElementById('submitButton');

    // Aper√ßu en temps r√©el
    function updatePreview() {
        const nom = nomInput.value.trim();
        const prenom = prenomInput.value.trim();
        const salaire = salaireInput.value.trim();
        const grade = gradeInput.value.trim();

        if (nom || prenom || salaire || grade) {
            previewSection.classList.add('visible');

            // Mettre √† jour l'avatar
            if (prenom && nom) {
                previewAvatar.textContent = (prenom.charAt(0) + nom.charAt(0)).toUpperCase();
            } else if (prenom) {
                previewAvatar.textContent = prenom.charAt(0).toUpperCase();
            } else if (nom) {
                previewAvatar.textContent = nom.charAt(0).toUpperCase();
            } else {
                previewAvatar.textContent = '??';
            }

            // Mettre √† jour le nom
            const fullName = `${prenom || 'Pr√©nom'} ${nom || 'Nom'}`.trim();
            previewName.textContent = fullName || 'Nom Pr√©nom';

            // Mettre √† jour le salaire
            const salaireValue = salaire ? parseFloat(salaire).toLocaleString('fr-FR', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            }) : '0,00';
            previewSalary.textContent = `Salaire: ${salaireValue} ‚Ç¨`;

            // Mettre √† jour le grade
            previewGrade.textContent = `Grade: ${grade || 'Non sp√©cifi√©'}`;
        } else {
            previewSection.classList.remove('visible');
        }
    }

    // √âcouteurs d'√©v√©nements pour l'aper√ßu
    nomInput.addEventListener('input', updatePreview);
    prenomInput.addEventListener('input', updatePreview);
    salaireInput.addEventListener('input', updatePreview);
    gradeInput.addEventListener('input', updatePreview);

    // Validation en temps r√©el
    const inputs = form.querySelectorAll('.form-input, .form-textarea');

    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            validateField(this);
        });

        input.addEventListener('input', function() {
            if (this.classList.contains('error')) {
                validateField(this);
            }
        });
    });

    function validateField(field) {
        const value = field.value.trim();

        // R√©initialiser les classes
        field.classList.remove('error', 'success');

        if (field.hasAttribute('required') && !value) {
            field.classList.add('error');
            return false;
        }

        // Validation sp√©cifique pour le salaire
        if (field.type === 'number' && field === salaireInput && value) {
            const numValue = parseFloat(value);
            if (isNaN(numValue) || numValue < 0) {
                field.classList.add('error');
                return false;
            }
        }

        if (value) {
            field.classList.add('success');
        }

        return true;
    }

    // Validation du formulaire avant soumission
    form.addEventListener('submit', function(e) {
        let isValid = true;

        inputs.forEach(input => {
            if (!validateField(input)) {
                isValid = false;
            }
        });

        if (!isValid) {
            e.preventDefault();
            // Animation de secousse pour les champs invalides
            const errorFields = form.querySelectorAll('.error');
            errorFields.forEach(field => {
                field.style.animation = 'shake 0.5s ease-in-out';
                setTimeout(() => {
                    field.style.animation = '';
                }, 500);
            });

            // Animation du bouton
            submitButton.style.animation = 'shake 0.5s ease-in-out';
            setTimeout(() => {
                submitButton.style.animation = 'pulse 2s ease-in-out infinite';
            }, 500);
        } else {
            // Animation de succ√®s
            submitButton.innerHTML = '<span>‚è≥</span> Cr√©ation en cours...';
            submitButton.disabled = true;
        }
    });

    // Animation de secousse
    const style = document.createElement('style');
    style.textContent = `
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        @keyframes success {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    `;
    document.head.appendChild(style);

    // Initialiser l'aper√ßu
    updatePreview();
});
</script>
