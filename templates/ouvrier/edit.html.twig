<script>
// D√©clarer les fonctions dans le scope global
window.showEnhancedDeleteConfirm = function() {
    const modal = document.getElementById('enhancedDeleteModal');
    if (modal) {
        modal.style.display = 'flex';
        modal.style.animation = 'fadeInUp 0.4s ease-out';
    }
};

window.hideEnhancedDeleteConfirm = function() {
    const modal = document.getElementById('enhancedDeleteModal');
    if (modal) {
        modal.style.animation = 'fadeOut 0.4s ease-out';
        setTimeout(() => {
            modal.style.display = 'none';
        }, 400);
    }
};

document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.ouvrier-edit-form');
    const submitButton = document.getElementById('submitButton');
    
    if (form && submitButton) {
        // Validation en temps r√©el
        const inputs = form.querySelectorAll('.form-input, .form-textarea');
        
        inputs.forEach(input => {
            input.addEventListener('blur', function() {
                validateField(this);
            });
            
            input.addEventListener('input', function() {
                if (this.classList.contains('error')) {
                    validateField(this);
                }
            });
        });
        
        function validateField(field) {
            const value = field.value.trim();
            
            // R√©initialiser les classes
            field.classList.remove('error', 'success');
            
            if (field.hasAttribute('required') && !value) {
                field.classList.add('error');
                return false;
            }
            
            // Validation sp√©cifique pour le salaire
            if (field.type === 'number' && field.name.includes('salaire') && value) {
                const numValue = parseFloat(value);
                if (isNaN(numValue) || numValue < 0) {
                    field.classList.add('error');
                    return false;
                }
            }
            
            if (value) {
                field.classList.add('success');
            }
            
            return true;
        }
        
        // Validation du formulaire avant soumission
        form.addEventListener('submit', function(e) {
            let isValid = true;
            
            inputs.forEach(input => {
                if (!validateField(input)) {
                    isValid = false;
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                // Animation de secousse pour les champs invalides
                const errorFields = form.querySelectorAll('.error');
                errorFields.forEach(field => {
                    field.style.animation = 'shake 0.5s ease-in-out';
                    setTimeout(() => {
                        field.style.animation = '';
                    }, 500);
                });
            } else {
                // Animation de chargement
                submitButton.innerHTML = '<span>‚è≥</span> Mise √† jour...';
                submitButton.disabled = true;
            }
        });
    }

    // Close modal when clicking outside
    const modal = document.getElementById('enhancedDeleteModal');
    if (modal) {
        modal.addEventListener('click', function(e) {
            if (e.target === this) {
                hideEnhancedDeleteConfirm();
            }
        });
    }

    // Add enhanced animations
    const enhancedStyle = document.createElement('style');
    enhancedStyle.textContent = `
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }
        
        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
            to {
                opacity: 0;
                transform: translateY(-30px) scale(0.95);
            }
        }
        
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        
        .enhanced-delete-modal {
            animation-duration: 0.4s;
        }
    `;
    document.head.appendChild(enhancedStyle);
});
</script>
