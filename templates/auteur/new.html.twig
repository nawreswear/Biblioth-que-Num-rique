    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <a href="{{ path('app_home') }}">
            <span>üè†</span>
            Accueil
        </a>
        <span class="breadcrumb-separator">‚Ä∫</span>
        <a href="{{ path('app_auteur_index') }}">
            <span>‚úçÔ∏è</span>
            Auteurs
        </a>
        <span class="breadcrumb-separator">‚Ä∫</span>
        <span>Nouveau</span>
    </nav>

    <div class="page-header">
        <div>
            <h1 class="page-title">‚úçÔ∏è Nouvel Auteur</h1>
            <p class="page-subtitle">Ajoutez un nouvel auteur √† votre biblioth√®que</p>
        </div>
        <div class="header-buttons">
            <a href="{{ path('app_auteur_index') }}" class="btn-secondary">
                ‚Üê Retour √† la liste
            </a>
        </div>
    </div>

    <div class="form-container">
        <div class="form-header">
            <span class="form-icon">üë§</span>
            <h2 class="form-title">Informations de l'Auteur</h2>
            <p class="form-subtitle">Remplissez les d√©tails de l'auteur que vous souhaitez ajouter</p>
        </div>

        <div class="form-content">
            {{ form_start(form, {'attr': {'class': 'author-create-form', 'novalidate': 'novalidate'}}) }}
                
