<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.livre-create-form');
    const titreInput = document.querySelector('#{{ form.titre.vars.id }}');
    const isbnInput = document.querySelector('#{{ form.isbn.vars.id }}');
    const quantiteInput = document.querySelector('#{{ form.quantite.vars.id }}');
    const prInput = document.querySelector('#{{ form.pr.vars.id }}');
    const datepubInput = document.querySelector('#{{ form.datepub.vars.id }}');
    const previewSection = document.getElementById('previewSection');
    const previewAvatar = document.getElementById('previewAvatar');
    const previewTitle = document.getElementById('previewTitle');
    const previewDetails = document.getElementById('previewDetails');
    const submitButton = document.getElementById('submitButton');
    
    // Aper√ßu en temps r√©el
    function updatePreview() {
        const titre = titreInput.value.trim();
        const isbn = isbnInput.value.trim();
        const quantite = quantiteInput.value;
        const pr = prInput.value;
        const datepub = datepubInput.value;
        
        if (titre) {
            previewSection.classList.add('visible');
            
            // Mettre √† jour le titre
            previewTitle.textContent = titre || 'Titre du livre';
            
            // Mettre √† jour les d√©tails
            let details = [];
            if (isbn) details.push(`ISBN: ${isbn}`);
            if (quantite) details.push(`Quantit√©: ${quantite}`);
            if (pr) details.push(`Prix: ${pr}Dt`);
            if (datepub) details.push(`Publi√©: ${new Date(datepub).toLocaleDateString()}`);
            
            previewDetails.textContent = details.join(' ‚Ä¢ ') || 'D√©tails du livre';
        } else {
            previewSection.classList.remove('visible');
        }
    }
    
    // √âcouteurs d'√©v√©nements pour l'aper√ßu
    titreInput.addEventListener('input', updatePreview);
    isbnInput.addEventListener('input', updatePreview);
    quantiteInput.addEventListener('input', updatePreview);
    prInput.addEventListener('input', updatePreview);
    datepubInput.addEventListener('input', updatePreview);
    
    // Validation en temps r√©el
    const inputs = form.querySelectorAll('.form-input, .form-select, .form-textarea');
    
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            validateField(this);
        });
        
        input.addEventListener('input', function() {
            if (this.classList.contains('error')) {
                validateField(this);
            }
        });
    });
    
    function validateField(field) {
        const value = field.value.trim();
        
        // R√©initialiser les classes
        field.classList.remove('error', 'success');
        
        if (field.hasAttribute('required') && !value) {
            field.classList.add('error');
            return false;
        }
        
        if (value) {
            field.classList.add('success');
        }
        
        return true;
    }
    
    // Validation du formulaire avant soumission
    form.addEventListener('submit', function(e) {
        let isValid = true;
        
        inputs.forEach(input => {
            if (!validateField(input)) {
                isValid = false;
            }
        });
        
        if (!isValid) {
            e.preventDefault();
            // Animation de secousse pour les champs invalides
            const errorFields = form.querySelectorAll('.error');
            errorFields.forEach(field => {
                field.style.animation = 'shake 0.5s ease-in-out';
                setTimeout(() => {
                    field.style.animation = '';
                }, 500);
            });
            
            // Animation du bouton
            submitButton.style.animation = 'shake 0.5s ease-in-out';
            setTimeout(() => {
                submitButton.style.animation = 'pulse 2s ease-in-out infinite';
            }, 500);
        } else {
            // Animation de succ√®s
            submitButton.innerHTML = '<span>‚è≥</span> Cr√©ation en cours...';
            submitButton.disabled = true;
        }
    });
    
    // Animation de secousse
    const style = document.createElement('style');
    style.textContent = `
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        
        @keyframes success {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    `;
    document.head.appendChild(style);
    
    // Initialiser l'aper√ßu
    updatePreview();
});
</script>
