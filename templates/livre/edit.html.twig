        text-align: center;
        position: relative;
    }

    .enhanced-delete-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        display: block;
    }

    .enhanced-delete-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--error-color);
        margin-bottom: 1rem;
    }

    .enhanced-delete-message {
