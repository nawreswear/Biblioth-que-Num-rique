<script>
// Version corrig√©e et simplifi√©e
document.addEventListener('DOMContentLoaded', function() {
    // √âl√©ments principaux
    const toggleDisplayBtn = document.getElementById('toggleDisplay');
    const downloadPdfBtn = document.getElementById('downloadPdf');
    const tableView = document.getElementById('tableView');
    const gridView = document.getElementById('gridView');
    const searchInput = document.getElementById('searchInput');
    
    // √âtat de l'affichage
    let isGridView = false;

    // Fonction pour basculer l'affichage
    function toggleDisplay() {
        isGridView = !isGridView;
        
        if (isGridView) {
            // Afficher la grille, cacher le tableau
            tableView.style.display = 'none';
            gridView.style.display = 'grid';
            toggleDisplayBtn.innerHTML = '<span>üìä</span> Affichage Tableau';
        } else {
            // Afficher le tableau, cacher la grille
            tableView.style.display = 'block';
            gridView.style.display = 'none';
            toggleDisplayBtn.innerHTML = '<span>üîÑ</span> Affichage Grille';
        }
        
        // Mettre √† jour la recherche pour l'affichage actuel
        performSearch();
    }

    // Fonction pour g√©n√©rer le PDF
    function generatePDF() {
        const totalBooks = {{ livres|length }};
        
        if (totalBooks === 0) {
            alert('Aucun livre √† exporter !');
            return;
        }
        
        // √âtat de chargement
        const originalText = downloadPdfBtn.innerHTML;
        downloadPdfBtn.innerHTML = '<span>‚è≥</span> G√©n√©ration...';
        downloadPdfBtn.disabled = true;
        
        try {
            // V√©rifier que jsPDF est disponible
            if (typeof window.jspdf === 'undefined') {
                throw new Error('Biblioth√®que jsPDF non charg√©e');
            }
            
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Titre principal
            doc.setFontSize(20);
            doc.setTextColor(40, 40, 40);
            doc.text('Catalogue des Livres', 105, 20, { align: 'center' });
            
            // Date de g√©n√©ration
            doc.setFontSize(12);
            doc.setTextColor(100, 100, 100);
            doc.text(`G√©n√©r√© le: ${new Date().toLocaleDateString('fr-FR')}`, 105, 30, { align: 'center' });
            
            // Statistiques
            doc.setFontSize(14);
            doc.setTextColor(60, 60, 60);
            doc.text(`Total: ${totalBooks} livre${totalBooks > 1 ? 's' : ''}`, 20, 50);
            
            {% set totalValue = 0 %}
            {% set totalStock = 0 %}
            {% for livre in livres %}
                {% set totalValue = totalValue + (livre.pr * livre.quantite) %}
                {% set totalStock = totalStock + livre.quantite %}
            {% endfor %}
            
            doc.text(`Valeur totale: {{ totalValue|number_format(2, ',', ' ') }} Dt`, 20, 60);
            doc.text(`Exemplaires en stock: {{ totalStock }}`, 20, 70);
            
            // En-t√™tes du tableau
            let yPosition = 90;
            doc.setFillColor(240, 240, 240);
            doc.rect(20, yPosition, 170, 10, 'F');
            doc.setFontSize(10);
            doc.setTextColor(0, 0, 0);
            doc.setFont(undefined, 'bold');
            
            doc.text('ID', 25, yPosition + 7);
            doc.text('Titre', 40, yPosition + 7);
            doc.text('Qt√©', 120, yPosition + 7);
            doc.text('Prix', 135, yPosition + 7);
            doc.text('ISBN', 155, yPosition + 7);
            doc.text('Date', 175, yPosition + 7);
            
            yPosition += 15;
            doc.setFont(undefined, 'normal');
            
            // Donn√©es des livres
            let pageNumber = 1;
            
            {% for livre in livres %}
                if (yPosition > 270) {
                    doc.addPage();
                    yPosition = 20;
                    pageNumber++;
                    
                    doc.setFontSize(12);
                    doc.setTextColor(100, 100, 100);
                    doc.text(`Catalogue des Livres - Page ${pageNumber}`, 105, 10, { align: 'center' });
                    yPosition = 30;
                }
                
                doc.setFontSize(9);
                doc.setTextColor(0, 0, 0);
                
                // ID
                doc.text('{{ livre.id }}', 25, yPosition);
                
                // Titre (tronqu√© si trop long)
                const bookTitle = '{{ livre.titre|escape('js') }}';
                const displayTitle = bookTitle.length > 40 ? bookTitle.substring(0, 37) + '...' : bookTitle;
                doc.text(displayTitle, 40, yPosition);
                
                // Quantit√© avec couleur
                const quantity = {{ livre.quantite }};
                if (quantity > 10) {
                    doc.setTextColor(0, 128, 0);
                } else if (quantity > 5) {
                    doc.setTextColor(255, 165, 0);
                } else {
                    doc.setTextColor(255, 0, 0);
                }
                doc.text(quantity.toString(), 120, yPosition);
                doc.setTextColor(0, 0, 0);
                
                // Prix
                doc.text('{{ livre.pr }} Dt', 135, yPosition);
                
                // ISBN
                const isbn = '{{ livre.isbn ? livre.isbn : "N/A" }}';
                const displayIsbn = isbn.length > 10 ? isbn.substring(0, 8) + '...' : isbn;
                doc.text(displayIsbn, 155, yPosition);
                
                // Date
                const date = '{{ livre.datepub ? livre.datepub|date("d/m/Y") : "N/A" }}';
                doc.text(date, 175, yPosition);
                
                yPosition += 8;
                
                // Ligne de s√©paration
                if (yPosition < 270) {
                    doc.setDrawColor(200, 200, 200);
                    doc.line(20, yPosition - 2, 190, yPosition - 2);
                }
            {% endfor %}
            
            // Pied de page avec num√©ros de page
            const pageCount = doc.internal.getNumberOfPages();
            for (let i = 1; i <= pageCount; i++) {
                doc.setPage(i);
                doc.setFontSize(8);
                doc.setTextColor(150, 150, 150);
                doc.text(`Page ${i} sur ${pageCount}`, 105, 285, { align: 'center' });
            }
            
            // Sauvegarder le PDF
            const fileName = `catalogue-livres-${new Date().toISOString().split('T')[0]}.pdf`;
            doc.save(fileName);
            
            alert(`PDF g√©n√©r√© avec succ√®s !\n${totalBooks} livre${totalBooks > 1 ? 's' : ''} export√©${totalBooks > 1 ? 's' : ''}`);
            
        } catch (error) {
            console.error('Erreur lors de la g√©n√©ration du PDF:', error);
            alert('Erreur lors de la g√©n√©ration du PDF. V√©rifiez la console pour plus de d√©tails.');
        } finally {
            // Restaurer l'√©tat du bouton
            downloadPdfBtn.innerHTML = originalText;
            downloadPdfBtn.disabled = false;
        }
    }

    // Fonction de recherche
    function performSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const currentView = isGridView ? gridView : tableView;
        const items = currentView.querySelectorAll(isGridView ? '.book-card' : 'tbody tr');
        
        let visibleCount = 0;
        
        items.forEach(item => {
            const searchData = item.getAttribute('data-search');
            if (searchData.includes(searchTerm)) {
                item.style.display = isGridView ? 'block' : '';
                visibleCount++;
            } else {
                item.style.display = 'none';
            }
        });
        
        // Mettre √† jour le compteur
        const counter = document.querySelector('.display-controls div');
        if (counter) {
            counter.innerHTML = `<strong>${visibleCount}</strong> livre${visibleCount > 1 ? 's' : ''} trouv√©${visibleCount > 1 ? 's' : ''}`;
        }
    }

    // √âv√©nements
    if (toggleDisplayBtn) {
        toggleDisplayBtn.addEventListener('click', toggleDisplay);
    }
    
    if (downloadPdfBtn) {
        downloadPdfBtn.addEventListener('click', generatePDF);
    }
    
    if (searchInput) {
        searchInput.addEventListener('input', performSearch);
    }

    // Initialisation pour mobile
    function initMobileView() {
        if (window.innerWidth <= 640 && !isGridView) {
            const headers = Array.from(document.querySelectorAll('thead th'));
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                cells.forEach((cell, index) => {
                    if (headers[index]) {
                        cell.setAttribute('data-label', headers[index].textContent);
                    }
                });
            });
        }
    }

    // Initialiser
    initMobileView();
    window.addEventListener('resize', initMobileView);
});
</script>

