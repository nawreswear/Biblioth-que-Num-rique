<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.editeur-edit-form');
    const submitButton = document.getElementById('submitButton');
    const deleteButton = document.getElementById('deleteButton');
    const cancelDeleteButton = document.getElementById('cancelDeleteButton');
    const modal = document.getElementById('enhancedDeleteModal');
    
    // Fonctions pour la modal de suppression
    function showEnhancedDeleteConfirm() {
        modal.style.display = 'flex';
        modal.style.animation = 'fadeInUp 0.4s ease-out';
    }

    function hideEnhancedDeleteConfirm() {
        modal.style.animation = 'fadeOut 0.4s ease-out';
        setTimeout(() => {
            modal.style.display = 'none';
        }, 400);
    }

    // √âv√©nements pour la modal de suppression
    deleteButton.addEventListener('click', showEnhancedDeleteConfirm);
    cancelDeleteButton.addEventListener('click', hideEnhancedDeleteConfirm);

    // Fermer la modal en cliquant √† l'ext√©rieur
    modal.addEventListener('click', function(e) {
        if (e.target === this) {
            hideEnhancedDeleteConfirm();
        }
    });

    // Fermer la modal avec la touche √âchap
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.style.display === 'flex') {
            hideEnhancedDeleteConfirm();
        }
    });
    
    // Validation en temps r√©el
    const inputs = form.querySelectorAll('.form-input, .form-textarea');
    
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            validateField(this);
        });
        
        input.addEventListener('input', function() {
            if (this.classList.contains('error')) {
                validateField(this);
            }
        });
    });
    
    function validateField(field) {
        const value = field.value.trim();
        
        // R√©initialiser les classes
        field.classList.remove('error', 'success');
        
        if (field.hasAttribute('required') && !value) {
            field.classList.add('error');
            return false;
        }
        
        if (value) {
            field.classList.add('success');
        }
        
        return true;
    }
    
    // Validation du formulaire avant soumission
    form.addEventListener('submit', function(e) {
        let isValid = true;
        
        inputs.forEach(input => {
            if (!validateField(input)) {
                isValid = false;
            }
        });
        
        if (!isValid) {
            e.preventDefault();
            // Animation de secousse pour les champs invalides
            const errorFields = form.querySelectorAll('.error');
            errorFields.forEach(field => {
                field.style.animation = 'shake 0.5s ease-in-out';
                setTimeout(() => {
                    field.style.animation = '';
                }, 500);
            });
        } else {
            // Animation de chargement
