<script>
// Utilisation de requestAnimationFrame pour des animations plus fluides
document.addEventListener('DOMContentLoaded', function() {
    // Add data-labels for mobile responsive
    function addDataLabels() {
        if (window.innerWidth <= 640) {
            const table = document.getElementById('editeursTable');
            const headers = Array.from(table.querySelectorAll('thead th'));
            const rows = table.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                cells.forEach((cell, index) => {
                    if (headers[index]) {
                        cell.setAttribute('data-label', headers[index].textContent);
                    }
                });
            });
        }
    }

    // Initialize data labels
    addDataLabels();
    
    // Update on resize avec debounce pour √©viter les appels excessifs
    let resizeTimeout;
    window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(addDataLabels, 250);
    });

    // Add hover effects avec requestAnimationFrame pour de meilleures performances
    const rows = document.querySelectorAll('#editeursTable tbody tr');
    rows.forEach(row => {
        if (!row.querySelector('.empty-state')) {
            row.addEventListener('mouseenter', function() {
                requestAnimationFrame(() => {
                    this.style.transform = 'translateX(8px)';
                });
            });
            
            row.addEventListener('mouseleave', function() {
                requestAnimationFrame(() => {
                    this.style.transform = 'translateX(0)';
                });
            });
        }
    });

    // Add loading animation
    const tableBody = document.querySelector('#editeursTable tbody');
    if (tableBody) {
        requestAnimationFrame(() => {
            tableBody.style.opacity = '0';
            setTimeout(() => {
                requestAnimationFrame(() => {
                    tableBody.style.transition = 'opacity 0.5s ease';
                    tableBody.style.opacity = '1';
                });
            }, 300);
        });
    }

    // Nettoyage des √©couteurs d'√©v√©nements pour √©viter les fuites de m√©moire
    function cleanupEventListeners() {
        const buttons = document.querySelectorAll('.btn-action');
        buttons.forEach(button => {
            button.removeEventListener('click', handleButtonClick);
        });
    }

    // Gestionnaire d'√©v√©nements pour les boutons
    function handleButtonClick(e) {
        e.preventDefault();
        const href = this.getAttribute('href');
        if (href) {
            // Animation de transition avant la navigation
            requestAnimationFrame(() => {
                document.body.style.opacity = '0.8';
                document.body.style.transition = 'opacity 0.3s ease';
                setTimeout(() => {
                    window.location.href = href;
                }, 300);
            });
        }
    }

    // Ajout des √©couteurs d'√©v√©nements aux boutons
    const buttons = document.querySelectorAll('.btn-action');
    buttons.forEach(button => {
        button.addEventListener('click', handleButtonClick);
    });

    // Nettoyage lors du d√©chargement de la page (mais sans utiliser beforeunload)
    window.addEventListener('pagehide', function() {
        cleanupEventListeners();
    });
});

// Alternative plus s√ªre pour la gestion des √©v√©nements de d√©chargement
if (window.performance && performance.navigation) {
    // Utiliser l'API Performance Navigation Timing au lieu de beforeunload
    const navigationEntries = performance.getEntriesByType('navigation');
    if (navigationEntries.length > 0) {
        const navEntry = navigationEntries[0];
        console.log('Navigation type:', navEntry.type);
    }
}

// Gestion des erreurs pour √©viter les violations de politique
window.addEventListener('error', function(e) {
    if (e.message.includes('Permissions policy violation')) {
        console.warn('Violation de politique de permissions d√©tect√©e:', e.message);
        e.preventDefault();
        return false;
    }
});
</script>
